name: "SparseNet"
layer {
  name: "data"
  type: "Data"
  top: "data"
  top: "label"
  include {
    phase: TRAIN
  }
  transform_param {
    scale: 0.0039215684
    mean_file: "data/mnist/mnist_mean.binaryproto"
  }
  data_param {
    source: "examples/mnist/mnist_train_lmdb_90"
    batch_size: 100
    backend: LMDB
  }
}

layer {
  name: "data"
  type: "Data"
  top: "data"
  top: "label"
  include {
    phase: TEST
  }
  transform_param {
    scale: 0.0039215684
    mean_file: "data/mnist/mnist_mean.binaryproto"
  }
  data_param {
    source: "examples/mnist/mnist_test_lmdb"
    batch_size: 100
    backend: LMDB
  }
}

layer {
  name: "encode"
  type: "SparseApprox"
  bottom: "data"
  top: "encode"
  param {
    name: "phi"
    lr_mult: 1
    decay_mult: 1
  }
  param { 
    name: "bias"
    lr_mult: 1
    decay_mult: 0
  }
  sparse_approx_param {
    num_elements: 500
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
      value: 0
    }
    num_iterations: 11
    lambda: 0.01
    eta: 0.1
    gamma: 0
  }
}

layer {
  name: "decode"
  type: "InnerProduct"
  bottom: "encode"
  top: "decode"
  param {
    name: "phi"
    lr_mult: 1
    decay_mult: 1
  }
  param {
    name: "bias"
    lr_mult: 1
    decay_mult: 0
  }
  inner_product_param {
    num_output: 784
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}

layer {
  name: "flatdata"
  type: "Flatten"
  bottom: "data"
  top: "flatdata"
}

layer {
  name: "euclidean_loss"
  type: "EuclideanLoss"
  bottom: "flatdata"
  bottom: "decode"
  top: "euclidean_loss"
  loss_weight: 1
}

layer {
    name: "relu"
    type: "ReLU"
    bottom: "encode"
    top: "encodeRelu"
}

layer {
    name: "id1"
    type: "InnerProduct"
    bottom: "encodeRelu"
    top: "id1"
    param {
        lr_mult: 1
    }
    param {
        lr_mult: 1 # was 2
    }
    inner_product_param {
        num_output: 10
        weight_filler {
            type: "xavier"
        }
        bias_filler {
            type: "constant"
        }
    }
}

layer {
    name: "accuracy"
    type: "Accuracy"
    bottom: "id1"
    bottom: "label"
    top: "accuracy"
    include {
        phase: TEST
    }
}

# Should we normalize by max value using a separate layer?

layer {
    name: "softmax_loss"
    type: "SoftmaxWithLoss"
    bottom: "id1"
    bottom: "label"
    top: "softmax_loss"
    loss_param {
        ignore_label: -1
        normalize: true # normalize by count
    }
}
